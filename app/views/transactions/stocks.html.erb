<% if @transaction.errors.any? %>
<ul>
  <% @transaction.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @transaction do |f| %>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, min: 1, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label 'Transfer To' %>
    <%= f.select :targetable_id, options_for_select(stock_options(@current_logged_user)), {:prompt => "--select recipient--"}, {class: 'form-control', required: true } %>
    <%= f.hidden_field :targetable_type, value: "Stock" %>
  </div>
  <%= f.submit "Transfer", class: 'btn btn-success' %>
<% end %>